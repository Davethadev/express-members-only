extends layout 
block content 

    div(class='w-full flex justify-center pt-[80px]')
        form(action="/user/post/create" method='post', class='w-[500px]')
            h1(class='font-bold text-2xl text-center')= title 
            div(class='w-full mt-2')
                label(for="title", class='font-bold') Title 
                input(type="text" name='title', class='w-full border-2 rounded border-gray-200 block mt-1 p-1 outline-none indent-[2px]')
            div(class='w-full mt-2')  
                label(for="title", class='font-bold') Post
                textarea(name="post", rows="10", class='w-full border-2 rounded border-gray-200 mt-1 p-2 outline-none')
            div(class='w-full p-2 mt-6 text-center bg-black text-white py-2 rounded')
                button(type='submit', class='w-full') Post

    if errors
        ul
            for error in errors
                li!= error.msg