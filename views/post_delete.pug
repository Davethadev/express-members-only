extends layout 
block content 

  div(class='w-full h-screen flex justify-center items-center')
    

    form(method='POST', class='w-[500px]')
      h1(class='font-bold text-xl text-center') Delete
        p(class='font-[400] text-lg') #{ post.title}
      div(class='w-full mt-2')
        input(type='hidden', name='id', value=post._id )

      div(class='w-full p-2 mt-6 text-center bg-red-500 text-white py-2 rounded')
        button(type='submit', class='w-full') Delete